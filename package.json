{
  "private": true,
  "scripts": {
    "build-all": "npm run build-docs && npm run build-css",
    "preinstall": "npm run clean",
    "postinstall": "bower i --silent && pulp build",
    "clean": "rm -rf output bower_components node_modules && cd docs/css && npm install",
    "build-docs": "pulp build -I docs/src --to docs/dist/example.js",
    "watch-docs": "pulp -w build -I docs/src --to docs/dist/example.js",
    "build-css": "cd docs/css && npm run build-prod"
  },
  "devDependencies": {
    "pulp": "^12.0.1",
    "purescript": "^0.11.7"
  }
}
